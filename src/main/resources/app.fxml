<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="appPane" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cameek.sshclient.controller.AppController"
            prefHeight="600" prefWidth="800">

    <top>
        <HBox prefHeight="10.0" prefWidth="10.0" BorderPane.alignment="CENTER"/>
    </top>

    <left>
        <VBox prefHeight="10.0" prefWidth="10.0" BorderPane.alignment="CENTER"/>
    </left>

    <center>
<!--        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">-->
            <TextArea fx:id="textArea" />
<!--        </VBox>-->
    </center>

    <right>
        <VBox prefHeight="10.0" prefWidth="10.0" BorderPane.alignment="CENTER"/>
    </right>

    <bottom>
        <HBox prefHeight="50.0" prefWidth="200.0" alignment="CENTER">

            <Button fx:id="buttonOk" text="OK" />

            <Pane minWidth="20" />

            <Button fx:id="buttonCancel" text="Cancel" />

        </HBox>
    </bottom>

</BorderPane>
